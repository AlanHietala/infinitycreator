<h1>New unit_option</h1>

<% form_for([:admin,Army.find(params[:army_id]),Unit.find(params[:unit_id]),@unit_options]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "name overwrites auto-generated name from weapons list" %><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :swc %><br />
    <%= f.text_field :swc %>
  </p>
  <p>
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </p>
  
  <p>
    <%= f.label :lt %><br />
    <%= f.check_box :lt %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', unit_options_path %>