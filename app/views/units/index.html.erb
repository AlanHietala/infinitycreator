<h1>Listing units</h1>

<table>
  <tr>
    <th>Mov1</th>
    <th>Mov2</th>
    <th>Cc</th>
    <th>Bs</th>
    <th>Ph</th>
    <th>Wip</th>
    <th>Arm</th>
    <th>Bts</th>
    <th>W</th>
    <th>SIL</th>
    <th>Str</th>
    <th>Swc</th>
    <th>Cost</th>
    <th>Unit type</th>
    <th>Avail</th>
    <th>Regular</th>
    <th>Impetuous</th>
    <th>Cube</th>
    <th>Skills</th>
    <th>Name</th>
    <th>Army</th>
    <th>Isaddon</th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%=h unit.mov1 %></td>
    <td><%=h unit.mov2 %></td>
    <td><%=h unit.cc %></td>
    <td><%=h unit.bs %></td>
    <td><%=h unit.ph %></td>
    <td><%=h unit.wip %></td>
    <td><%=h unit.arm %></td>
    <td><%=h unit.bts %></td>
    <td><%=h unit.w %></td>
    <td><%=h unit.sil %></td>
    <td><%=h unit.str %></td>
    <td><%=h unit.swc %></td>
    <td><%=h unit.cost %></td>
    <td><%=h unit.unit_type_id %></td>
    <td><%=h unit.avail %></td>
    <td><%=h unit.regular %></td>
    <td><%=h unit.impetuous %></td>
    <td><%=h unit.cube %></td>
    <td><%=h unit.skills %></td>
    <td><%=h unit.name %></td>
    <td><%=h unit.army_id %></td>
    <td><%=h unit.isaddon %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

