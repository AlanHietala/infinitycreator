<div class="prepend-top combatgroupheader">
	<div class="combatgrouptitle">Army Lists</div>

<div class="combatgroupactions">
<%= link_to 'New Army List', new_army_list_path %>
</div>
</div>
<table>
	<th>List</th>
	<th>Faction</th>
	<th>Points</th>
	<th>Actions</th>
<% for army_list in @army_lists %>
  <tr>

    <td><%= link_to army_list.name, army_list %></td>
	<td><%=army_list.army.name%></td>
	<td><%=army_list.maxpointvalue%></td>
    <td><%= link_to image_tag("delete.png"), army_list, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>