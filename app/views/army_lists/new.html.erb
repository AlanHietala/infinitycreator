<h2 class="textheader">New Army List</h2>
<div class="textblock">

<% form_for(@army_list) do |f| %>
  <%= f.error_messages %>
	<p><%=label_tag "List Name"%><br /> <%=f.text_field :name%></p>
	<p><%=label_tag "Army"%><br />
	<%=collection_select :army_list,:army_id,Army.find(:all),:id,:name%></p>
	<p><%=label_tag "point value"%><br /><%=f.text_field :maxpointvalue%></p>
	<p><%=label_tag "description"%><br /><%=f.text_area :description,:rows=>5,:cols=>80%>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', army_lists_path %>
</div>